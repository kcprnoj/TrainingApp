<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/secondaryColorLight</item>
    </style>

    <!-- The default font for RecyclerView items is too small.
    The margin is a simple delimiter between the words. -->
    <style name="training_title">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="training_desc">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="Theme.Training_app" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColorLight</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorLight</item>
        <item name="colorOnPrimary">@color/secondaryDarkColorLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDarkColorLight</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColorLight</item>
        <item name="colorOnSecondary">@color/primaryColorLight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
