<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/trainingFragment"
        android:name="com.trainingapp.ui.TrainingFragment"
        android:label="fragment_training"
        tools:layout="@layout/fragment_training" >
        <action
            android:id="@+id/action_trainingFragment_to_runningFragment"
            app:destination="@id/runningFragment" />
    </fragment>
    <fragment
        android:id="@+id/runningFragment"
        android:name="com.trainingapp.ui.RunningFragment"
        android:label="RunningFragment" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.trainingapp.ui.HistoryFragment"
        android:label="HistoryFragment" />
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.trainingapp.ui.StatisticsFragment"
        android:label="StatisticsFragment" />
    <fragment
        android:id="@+id/modifyAccountFragment"
        android:name="com.trainingapp.ui.ModifyAccountFragment"
        android:label="fragment_modify_account"
        tools:layout="@layout/fragment_modify_account" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.trainingapp.ui.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_trainingFragment"
            app:destination="@id/trainingFragment" />
    </fragment>
</navigation>