<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="logo_run" format="reference"/>
    <attr name="congrats_pic" format="reference"/>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/secondaryLightColorLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/secondaryDarkColorLight</item>
    </style>


    <style name="training_title">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="training_desc">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="Theme.Training_app" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="logo_run">@drawable/run_dark</item>
        <item name="congrats_pic">@drawable/cong2</item>
        <item name="colorPrimary">@color/secondaryColorLight</item>
        <item name="colorPrimaryVariant">@color/secondaryLightColorLight</item>
        <item name="colorOnPrimary">@color/primaryColorLight</item>

        <item name="colorSecondary">@color/secondaryDarkColorLight</item>
        <item name="colorSecondaryVariant">@color/primaryLightColorLight</item>
        <item name="colorOnSecondary">@color/secondaryLightColorLight</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>